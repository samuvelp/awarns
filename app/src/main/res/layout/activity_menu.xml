<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.designthepresent.samuvelp.awarns.MenuActivity">
    <Button
        android:id="@+id/UI_BTN_playmain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Play"
        android:textColor="#ff0000"
        android:textSize="50sp"
        android:fontFamily="casual"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"/>
    <Button
        android:id="@+id/UI_BTN_HowTO"
        android:layout_below="@id/UI_BTN_playmain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="How to?"
        android:textColor="#035BBC"
        android:textSize="30sp"
        android:fontFamily="casual"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"/>
    <Button
        android:id="@+id/UI_BTN_insta"
        android:layout_below="@id/UI_BTN_HowTO"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="instagram"
        android:textAllCaps="false"
        android:textColor="#732AB0"
        android:textSize="34sp"
        android:fontFamily="casual"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"/>


</RelativeLayout>
